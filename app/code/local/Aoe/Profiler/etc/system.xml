<config>
	<sections>
		<dev>
			<groups>
				<debug>
					<fields>
						<showDisabledMessage translate="label">
							<label>Show disabled message</label>
							<comment><![CDATA[If the profiler is enabled in configuration but not triggered (by url parameter, cookie or hardcoded Varien_Profiler::enable()) a message will appear below the rendered page with a profiler link.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showDisabledMessage>
						<hideLinesFasterThan translate="label">
							<label>Hide lines faster than</label>
							<comment><![CDATA[in ms]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</hideLinesFasterThan>
					</fields>
				</debug>
			</groups>
		</dev>
	</sections>
</config>