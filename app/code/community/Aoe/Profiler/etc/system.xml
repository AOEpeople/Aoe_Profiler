 */
-->
<config>
	<sections>
		<dev>
			<groups>
				<debug>
					<fields>
						<showDisabledMessage translate="label">
							<label>Show disabled message</label>
							<comment><![CDATA[If the profiler is enabled in configuration but not triggered (by url parameter, cookie or hardcoded Varien_Profiler::enable()) a message will appear below the rendered page with a profiler link.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showDisabledMessage>
						<hideLinesFasterThan translate="label">
							<label>Hide lines faster than</label>
							<comment><![CDATA[in ms]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</hideLinesFasterThan>
						<logInvalidNesting translate="label comment">
							<label>Log invalid nesting</label>
							<comment><![CDATA[Write information to system log when buckets are not started / stopped in correct order.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>120</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</logInvalidNesting>
						<profileDir translate="label">
							<label>Profile Storage Dir</label>
							<comment><![CDATA[Leave blank to use var/profile. May specify any absolute path.]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>130</sort_order>
							<show_in_default>1</show_in_default>
						</profileDir>
                        <remoteCallUrlTemplate translate="label">
                            <label>Remote call url template</label>
                            <comment><![CDATA[First %s will be replaced by file, second %s by line number]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </remoteCallUrlTemplate>
					</fields>
				</debug>
			</groups>
		</dev>
	</sections>
</config>
